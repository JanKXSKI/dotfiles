#! /usr/bin/env bash

rund=$(dirname $0)/run
mkdir -p "$rund"
. ~/.sh/logging.sh "$rund"

sessionLocation="${1:-$(pwd)}"

function launch {
    remote="${1%:*}"
    if [[ "$remote" != "$1" ]]; then
        folder=$(ssh "$remote" "realpath '${1#*:}'")
        sesl="$remote:$folder"
        ~/.sh/WriteLeastRecentlyUsed "$rund/sessions" "$sesl"
        rdir="bin/run/sessions-from/$(hostname -f)"
        rdir=$(ssh "$remote" "mkdir -p '$rdir' && realpath '$rdir'")
        sess="$rdir/sessions"
        scp "$rund/sessions" "$remote:$sess"
        ssh -t "chezmoi update"
        ssh -t "$remote" "~/.sh/Code '$folder' '$sess'"
        scp "$remote:$sess" "$rund/sessions"
    else
        sesl="$(realpath $1)"
        ~/.sh/WriteLeastRecentlyUsed "$rund/sessions" "$sesl"
        ~/.sh/Code "$sesl" "$rund/sessions"
    fi
    next=$(tail -n 1 "$rund/sessions")
    [[ "$next" == "$sesl" ]] && return
    launch "$next"
}

launch "$sessionLocation"

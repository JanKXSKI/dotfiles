# Source global definitions
if [ -f /etc/bashrc ]; then
. /etc/bashrc
fi

# User specific environment
if ! [[ "$PATH" =~ "$HOME/.local/bin:$HOME/bin:" ]]
then
PATH="$HOME/.local/bin:$HOME/bin:$PATH"
fi
export PATH

# allow sudo to autocomplete
complete -cf sudo

PS1='\w \$ '

# Aliases
alias tmux='tmux -2'

# Other configuration
for f in ~/.bashrc.d/*.sh; do . $f; done


set rtp+=/opt/homebrew/opt/fzf

syntax enable
set hidden

inoremap jj <Esc>
let mapleader = " "
nnoremap <Leader>o :OpFile<Enter>
nnoremap <Leader>g :OpGrep 
nnoremap <Leader>l :let @d=expand('%:p').':'.line('.') <bar> let @f=expand('%:p') <bar> let @l=line('w0').','.line('w$') <CR>
nnoremap <Leader>p :term ++curwin ++close bash -c "git status && bash" <CR>

tnoremap <C-W><Space> <C-W>N

set shiftwidth=4 smarttab expandtab
set listchars=eol:¬,tab:»\ ,trail:~,extends:>,precedes:<,space:⸱
set list
highlight SpecialKey ctermfg=darkgrey
highlight NonText ctermfg=darkgrey
set number

if &term =~ '\%(linux\|tmux\)'
    set termguicolors
    let &t_8f = "\<Esc>[38;2;%lu;%lu;%lum"
    let &t_8b = "\<Esc>[48;2;%lu;%lu;%lum"
endif

call plug#begin()
Plug 'morhetz/gruvbox'
Plug 'wfxr/minimap.vim'
Plug 'easymotion/vim-easymotion'
call plug#end()

let g:gruvbox_contrast_dark = 'soft'

try
    colorscheme gruvbox
catch
    echom "Gruvbox still missing, expected when installing plugins."
endtry

set background=dark
hi! link StatusLineTerm StatusLine
hi! link StatusLineTermNC StatusLineNC

let g:minimap_width = 20
let g:minimap_auto_start = 1
let g:minimap_auto_start_win_enter = 1
let g:minimap_git_colors = 1
let g:minimap_highlight_search = 1
let g:minimap_range_color = 'GruvboxYellowSign'
let g:minimap_search_color = 'GruvboxAquaBold'
let g:minimap_diffadd_color = 'GruvboxGreen'
let g:minimap_diffremove_color = 'GruvboxRed'
let g:minimap_diff_color = 'GruvboxBlue'
let g:minimap_cursor_diffadd_color = 'GruvboxGreenBold'
let g:minimap_cursor_diffremove_color = 'GruvboxRedBold'
let g:minimap_cursor_diff_color = 'GruvboxBlueBold'
let g:minimap_range_diffadd_color = 'GruvboxGreenSign'
let g:minimap_range_diffremove_color = 'GruvboxRedSign'
let g:minimap_range_diff_color = 'GruvboxBlueSign'

let g:EasyMotion_do_mapping = 0
map <Leader>f <Plug>(easymotion-bd-f2)
map <Leader>t <Plug>(easymotion-bd-t2)
let g:EasyMotion_smartcase = 1

